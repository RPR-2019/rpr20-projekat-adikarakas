<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane hgap="15.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" vgap="15.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">

    <columnConstraints>
    <ColumnConstraints hgrow="SOMETIMES" />
    <ColumnConstraints hgrow="SOMETIMES" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints vgrow="SOMETIMES" />
    <RowConstraints vgrow="SOMETIMES" />
    <RowConstraints vgrow="SOMETIMES" />
      <RowConstraints vgrow="SOMETIMES" />
      <RowConstraints vgrow="SOMETIMES" />
      <RowConstraints vgrow="SOMETIMES" />
  </rowConstraints>
   <children>
      <Label text="%name" />
      <Label text="%surname" GridPane.rowIndex="1" />
      <Label text="%country" GridPane.rowIndex="3" />
      <Label text="%birthDate" GridPane.rowIndex="2" />
      <TextField fx:id="firstNameField" GridPane.columnIndex="1" />
      <TextField fx:id="surnameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      <DatePicker fx:id="dateIdentity" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      <ChoiceBox fx:id="choiceNationality" GridPane.columnIndex="1" GridPane.rowIndex="3" />
      <Label text="%position" GridPane.rowIndex="4" />
      <ChoiceBox fx:id="choicePosition" GridPane.columnIndex="1" GridPane.rowIndex="4" />
      <ButtonBar GridPane.columnIndex="1" GridPane.rowIndex="5">
        <buttons>
          <Button fx:id="saveButton" defaultButton="true" mnemonicParsing="false" onAction="#savePressed" text="%save" />
            <Button fx:id="cancelPlayerButton" cancelButton="true" mnemonicParsing="false" onAction="#cancelPressed" text="%cancel" />
        </buttons>
      </ButtonBar>
   </children>
   <padding>
      <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
   </padding>
</GridPane>
